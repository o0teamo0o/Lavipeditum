<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 最基础的布局 -->
    <style name="base_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 登录注册editView布局样式 -->
    <style name="login_editview" parent="base_layout">
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <!-- 分割线样式 -->
    <style name="divider">
        <item name="android:background">@drawable/apk_all_lineone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
    
</resources>
